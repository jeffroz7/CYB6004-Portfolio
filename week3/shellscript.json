{
	// Place your snippets for shellscript here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	
	"Add a Shebang": { 
    	"prefix": "shebang", 	  
		"body": [ 
			"#!/bin/bash",   
		], 
		"description": "Add shebang to script" 
			  
	}, 
		
	"Add Case Statement": {
		"prefix": "case", 	  
		"body": [ 
			"case $var in",
				"{testitems} )",
					"# code if match",
					";;",
				"{testitems} )",
					"# code if match",
					";;",
				"{testitems} )",
					"# code if match",
					";;",
				"*) # default case",
					"# code if default case",
					";;",
			"esac",
		], 
		"description": "Adds case statement structure" 
	},

	"User Prompt": {
		"prefix": "promptuser",
		"body": [
			"read -p '{user prompt}: ' var",
		],
		"description": "Adds user prompt"
	},

	"For Loop": {
		"prefix": "for loop",
		"body": [
			"for (( )); do",
				"# what to do",
			"done",
		],
		"description": "Add a basic for-loop"
	},

	"Add And-Or Triple Test": {
		"prefix": "andortriple",
		"body": [
			"if [[ {andtest} ]] && ( [[ {oroption1} ]] || {{ {oroption1} ]] ); then",
				"# code if true",
			"else",
				"# code if false",
			"fi",
		],
		"description": "Adds IF-ELSE test with one AND and two OR options"
	},

	"Get the Last Argument Given to Script": {
		"prefix": "lastarg",
		"body": [
			"LASTARG="${@: -1}"",
		],
		"description": "Reads the last argument given to the script"
	},

